{
	"name": "lambster",
	"version": "1.0.7",
	"description": "Lambda calculus interpreter library and CLI.",
	"type": "commonjs",
	"sideEffects": false,
	"files": [
		"dist",
		"src"
	],
	"main": "./dist/lambster.umd.js",
	"module": "./dist/lambster.es.js",
	"types": "./dist/lamsbter.es.d.ts",
	"exports": {
		".": {
			"import": "./dist/lambster.es.js",
			"require": "./dist/lambster.umd.js"
		}
	},
	"bin": {
		"lambster": "./dist/cli.js"
	},
	"scripts": {
		"dev": "vite",
		"build": "genversion --es6 --semi src/version.ts && vite build",
		"start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli.ts # TODO use typescript native watch",
		"test": "mocha --loader=ts-node/esm --extension ts ./tests/**/*.test.ts",
		"link": "rm ./env/bin/lambster && npm link --force",
		"refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
		"clean": "rm -rf ./dist",
		"dryupdate": "ncu",
		"realupdate": "ncu -u"
	},
	"devDependencies": {
		"@types/chai": "^4.3.3",
		"@types/eslint": "^8.4.10",
		"@types/mocha": "^10.0.0",
		"@types/node": "^18.11.9",
		"@types/react-dom": "^18.0.8",
		"@types/ws": "^8.5.3",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@vitejs/plugin-react": "^2.2.0",
		"chai": "^4.3.6",
		"eslint": "^8.26.0",
		"eslint-plugin-react": "^7.31.10",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"genversion": "^3.1.1",
		"mocha": "^10.1.0",
		"nodemon": "^2.0.20",
		"npm-check-updates": "^16.3.16",
		"optionator": "^0.9.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4",
		"vite": "^3.2.2",
		"vite-plugin-checker": "^0.5.1"
	},
	"peerDependencies": {
		"react": ">=16.8.0",
		"react-dom": ">=16.8.0"
	},
	"dependencies": {
		"vite-plugin-dts": "^1.6.6"
	}
}
